.tabbable
  ul.nav.nav-tabs
    li.active: a.btc-proof href="#btc-proof" data-toggle="tab" == t('.verify-btc')
    li.active: a.doge-proof href="#doge-proof" data-toggle="tab" == t('.verify-doge')
    li.active: a.zzf-proof href="#zzf-proof" data-toggle="tab" == t('.verify-zzf')
