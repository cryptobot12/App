    li:        a.blk-proof href="#blk-proof" data-toggle="tab" == t('.verify-blk')
    li:        a.rpt-proof href="#rpt-proof" data-toggle="tab" == t('.verify-rpt')
    li:        a.trt-proof href="#trt-proof" data-toggle="tab" == t('.verify-trt')
    li:        a.cny-proof href="#cny-proof" data-toggle="tab" == t('.verify-cny')

  .tab-content
    #btc-proof.tab-pane.active: .trade-wrapper
      .assets
        span.title = t('.btc-assets-total')
        span.currency
          == t("currency.icon.btc")
          = @btc_proof.sum
      = render 'liability_data', account: @btc_account, proof: @btc_proof

